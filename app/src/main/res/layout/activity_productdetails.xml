<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/screen_style"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView_flower"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
     />
    <TextView
    android:text="Flower:"
    android:textSize="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    />
    <TextView
        android:id="@+id/textView_flowerName"
        android:text="   daisy"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:text="Price:"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/textView_flowerPrice"
        android:text="   $11.99"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:text="Quantity:"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/btn_deduct"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:onClick="btnMinus_pressed"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/editText_productCount"
            android:layout_width="40dp"
            android:ems="10"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btn_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:text="+"
            android:backgroundTint="@color/white"
            android:onClick="btnAdd_pressed"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_addToCart"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add To Cart"
        style="@style/button_margin"
        android:onClick="btnAddToCart_pressed"
        />
    <Button
        android:id="@+id/btn_placeOrder"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Place Order"
        style="@style/button_margin"
        android:onClick="btnPlaceOrder_pressed"
        android:backgroundTint="@color/green"
        />

    <Button
        android:id="@+id/btn_backToList"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        style="@style/back_button"
        android:layout_gravity="center"
        android:text="Back To List"
        android:onClick="btnBackToList_pressed"
        />
</LinearLayout>